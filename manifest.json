{
    "name": "Sitography",
    "version": "1.0",
    "description": "Keep track of all the websites you visit!",
    "permissions": [
        "storage",
        "tabs"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "manifest_version": 2
}